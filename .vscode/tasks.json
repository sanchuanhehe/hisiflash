{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "Build (Debug)"
        },
        {
            "type": "cargo",
            "command": "build",
            "args": ["--release"],
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "Build (Release)"
        },
        {
            "type": "cargo",
            "command": "run",
            "args": ["--bin", "hisiflash", "--", "--help"],
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "Run: hisiflash --help"
        },
        {
            "type": "cargo",
            "command": "run",
            "args": ["--bin", "hisiflash", "--", "list-ports"],
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "Run: hisiflash list-ports"
        },
        {
            "type": "cargo",
            "command": "run",
            "args": ["--release", "--bin", "hisiflash", "--", "list-ports"],
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "Run (Release): hisiflash list-ports"
        },
        {
            "type": "cargo",
            "command": "test",
            "problemMatcher": ["$rustc"],
            "group": "test",
            "label": "Run Tests"
        },
        {
            "type": "cargo",
            "command": "clippy",
            "problemMatcher": ["$rustc"],
            "group": "build",
            "label": "Clippy"
        },
        {
            "type": "cargo",
            "command": "fmt",
            "args": ["--all"],
            "problemMatcher": [],
            "group": "build",
            "label": "Format Code"
        }
    ]
}
